					<p class="text-sm">This box has no Vukkies below 3 stars (rare) <br>Unique: 2 secret Vukkies</p>
				</div></td> -->
			</tr>
		</table>
		</center>
		<%- include('common/loginPopup.ejs'); %>
		<%- include('common/footer.ejs'); %>
		<div class="hidden">
			Using w3m?
			<a href="/buyBox/shark">Click here to open a box</a>
		</div>
	</body>
	<script>
	function buyBox(id) {
		event.srcElement.disabled = true;
		if(document.getElementById("loggedIn").value == "1") {
			setTimeout(() => {
				window.location="/buyBox/"+id;
			}, localStorage.getItem("kachingOn") != "false" ? 1000 : 0);
		} else {
			loginPopup();
		}
	}
	</script>
</html>